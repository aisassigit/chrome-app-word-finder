{
    "name": "__MSG_appName__",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/word-finder-16.png",
        "128": "images/word-finder-128.png"
    },
    "default_locale": "en",
  "commands": {
    "toggleSidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Toggle Sidebar"
    }
  },
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "scripts/background.js"
        ]
    },
  "browser_action": {
    "default_icon": {
      "19": "images/word-finder-19.png",
      "38": "images/word-finder-38.png"
    },
    "default_title": "Word Finder"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "styles/iframe.css"
      ],
      "js": [
        "scripts/contentscript.js",
        "bower_components/hilitor/hilitor.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "tabs",
    "history",
    "management",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "index.html",
    "scripts/contentscripts.js",
    "bower_components/bootstrap/dist/css/bootstrap.css.map"
  ]
}
